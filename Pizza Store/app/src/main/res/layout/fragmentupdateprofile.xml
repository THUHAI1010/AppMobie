<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_pizza1"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/aniamtion"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/login" />

            <TextView
                android:id="@+id/txt"
                android:layout_below="@+id/aniamtion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/bungeeregular"
                android:text="UPDATE PROFILE"
                android:textColor="#fff"
                android:lineSpacingMultiplier="1.0"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="250dp"
            android:background="@drawable/bgupdateprofile"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/antic"
                android:text="Infomation"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />


            <EditText
                android:layout_width="300dp"
                android:hint="Nhập tên"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:theme="@style/foating"
                android:id="@+id/profilename"
                android:paddingBottom="10dp"
                android:background="@drawable/boggocedt"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgprofile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="180dp"
            android:layout_gravity="center_horizontal"
            app:civ_border_width="5dp"
            app:civ_border_color="#fff"
            android:src="@drawable/avatar"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="401dp"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        </LinearLayout>

        <EditText
            android:id="@+id/profilemail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/boggocedt"
            android:hint="Nhập Email"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:theme="@style/foating"
            app:passwordToggleEnabled="true" />

        <EditText
            android:id="@+id/profilephone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/boggocedt"
            android:hint="Nhập số điện thoại"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:theme="@style/foating" />

        <EditText
            android:id="@+id/profileaddress"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/boggocedt"
            android:hint="Nhập địa chỉ"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:theme="@style/foating" />

        <Button
            android:id="@+id/updateprofile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/boggocbutton"
            android:text="UPDATE PROFILE"
            android:theme="@style/foating" />

    </LinearLayout>
</LinearLayout>